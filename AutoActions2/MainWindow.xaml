<Window x:Class="AutoActions2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutoActions2.ViewModels"
        xmlns:conv="clr-namespace:AutoActions2.Converters"
        mc:Ignorable="d"
        Background="{Binding BackgroundColor}"
        ResizeMode="NoResize"
        Title="Minecraft Auto Actions 0.1b" Height="420" Width="420">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:BooleanInverterConverter x:Key="BooleanInverterConverter" />
    </Window.Resources>

    <Grid>
        <WrapPanel Orientation="Vertical" Margin="20" Background="LightGray">
            <Grid Margin="30 10" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
            <!-- Header -->
                <StackPanel Grid.Row="0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Auto Actions 2025" FontSize="32" FontWeight="Bold" />
                        <TextBlock Text="by Henrik Carlberg 2025" FontStyle="Italic" FontSize="10" TextAlignment="Right"  />
                    </StackPanel>
                </StackPanel>

                <!-- Mode -->
                <StackPanel Grid.Row="2">
                    <Label Content="Select Mode:" FontSize="12" Margin="0" />
                    <ComboBox FontSize="16" 
                              ItemsSource="{Binding Source={x:Static vm:MainViewModel.ModeValues}}" 
                              SelectedValuePath="Value" 
                              DisplayMemberPath="Description" 
                              SelectedValue="{Binding SelectedMode}"
                              IsEnabled="{Binding IsStarted, Converter={StaticResource BooleanInverterConverter}}"/>
                </StackPanel>

                <!-- Message -->
                <WrapPanel Margin="0" Grid.Row="4">
                    <Label>Message</Label>
                    <TextBlock Text="{Binding Message}"  Margin="10 5" TextWrapping="Wrap" FontSize="14"/>
                </WrapPanel>

                <!-- Start Stop -->
                <StackPanel Grid.Row="6">
                    <Button Content="Start (F6)" Command="{Binding StartCommand}" Margin="0 10" IsEnabled="{Binding CanStart}" Height="30" FontSize="16"/>
                    <Button Content="Stop (F6)" Command="{Binding StopCommand}" Margin="0 10" IsEnabled="{Binding IsStarted}"  Height="30" FontSize="16"/>
                </StackPanel>
                
            </Grid>
        </WrapPanel>
    </Grid>
</Window>